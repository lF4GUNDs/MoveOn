<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222426"
    android:padding="16dp">

    <!-- Nome do exercício -->
    <EditText
        android:id="@+id/editNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:backgroundTint="#84BF04"
        android:hint="Nome do exercício"
        android:inputType="textPersonName"
        android:textColor="@android:color/white"
        android:textColorHint="#AAAAAA"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Séries -->
    <EditText
        android:id="@+id/editSeries"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:backgroundTint="#84BF04"
        android:hint="Número de séries"
        android:inputType="number"
        android:textColor="@android:color/white"
        android:textColorHint="#AAAAAA"
        app:layout_constraintTop_toBottomOf="@id/editNome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Repetições -->
    <EditText
        android:id="@+id/editRepeticoes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:backgroundTint="#84BF04"
        android:hint="Número de repetições"
        android:inputType="number"
        android:textColor="@android:color/white"
        android:textColorHint="#AAAAAA"
        app:layout_constraintTop_toBottomOf="@id/editSeries"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Peso -->
    <EditText
        android:id="@+id/editPeso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:backgroundTint="#84BF04"
        android:hint="Peso (kg)"
        android:inputType="numberDecimal"
        android:textColor="@android:color/white"
        android:textColorHint="#AAAAAA"
        app:layout_constraintTop_toBottomOf="@id/editRepeticoes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botão salvar -->
    <Button
        android:id="@+id/btnSalvar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Salvar"
        android:backgroundTint="#84BF04"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/editPeso"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
